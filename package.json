{
  "name": "@seamonster-studios/rescript-index",
  "author": "SeaMonster Studios Engineering",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "make": "node ./bin/make-package",
    "dev": "cross-env FAST_REFRESH=false cosmos",
    "build:packages": "lerna run build",
    "build:cosmos": "FAST_REFRESH=false cosmos-export",
    "build": "npm-run-all bootstrap build:packages build:cosmos",
    "serve": "npx serve cosmos-export",
    "bootstrap": "rm -rf node_modules && yarn && lerna clean -y && lerna bootstrap",
    "deploy": "lerna publish",
    "clean": "lerna run clean && rm -rf ./cosmos-export"
  },
  "license": "MIT",
  "keywords": [
    "rescript"
  ],
  "devDependencies": {
    "@craco/craco": "^6.1.2",
    "autoprefixer": "^9",
    "change-case": "^4.1.2",
    "cross-env": "^7.0.3",
    "fs-extra": "^9.1.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7",
    "react": "^17.0.2",
    "react-cosmos": "^5.6.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "serve": "^11.3.2",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
